{
  "all": true,
  "include": ["src/**/*.{ts,tsx}"],
  "exclude": [
    "src/**/*.stories.{ts,tsx}",
    "src/**/__tests__/**",
    "src/setupTests.ts",
    "src/main.tsx",
    "src/index.css",
    "src/styles/**"
  ],
  "extension": [".ts", ".tsx"],
  "reporter": ["text", "json", "html", "lcov"],
  "report-dir": "./coverage",
  "temp-dir": "./.nyc_output",
  "instrument": true,
  "sourceMap": true,
  "cache": true,
  "check-coverage": false,
  "branches": 70,
  "lines": 80,
  "functions": 80,
  "statements": 80
}
