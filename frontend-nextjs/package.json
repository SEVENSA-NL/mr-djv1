{
  "name": "mr-dj-frontend-nextjs",
  "version": "1.0.0",
  "description": "Mr. DJ Frontend with Next.js and i18n",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e-smoke": "node ../node_modules/@playwright/test/cli.js test -c playwright.smoke.config.ts",
    "test:e2e-staging": "BASE_URL=https://staging.sevensa.nl NODE_TLS_REJECT_UNAUTHORIZED=0 node ../node_modules/@playwright/test/cli.js test -c playwright.staging.config.ts",
    "test:full": "npm run test && npm run build && npm run test:e2e-smoke",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.556.0",
    "next": "^15.0.0",
    "next-intl": "^3.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
